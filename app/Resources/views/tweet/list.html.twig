{% extends "::base.html.twig" %}

{%  block title 'Accueil' %}

{%  block header  %}
<h1>Les derniers tweets</h1>
{% endblock %}

{% block content %}


    {% for  tweet in tweets %}
        <div class="panel panel-default">
            <div class="panel-body">
          {{ tweet.message }}
                <a href="{{  path('app_tweet_view', {'id':tweet.id}) }}"> Voir details</a>
        </div>
    </div>


    {% else %}
    Aucun tweet
    {% endfor %}

{% endblock %}


{%  block footer %}
    {{ parent() }}

    <a href="{{  path('app_twig_test') }}"> Lien vers la page twig test</a>
    <br>
    <a href="{{  path('app_tweet_list') }}"> Lien vers la page tweett</a>

{% endblock %}
